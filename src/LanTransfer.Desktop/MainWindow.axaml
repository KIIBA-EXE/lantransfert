<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LanTransfer.Desktop.ViewModels"
        xmlns:models="using:LanTransfer.Core.Models"
        x:Class="LanTransfer.Desktop.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="LAN Transfer"
        Width="800"
        Height="600"
        MinWidth="600"
        MinHeight="400"
        Background="#1a1a2e"
        WindowStartupLocation="CenterScreen">
    
    <Window.Styles>
        <!-- Modern button style -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#6366f1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#818cf8"/>
        </Style>
        
        <!-- Card style -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#16213e"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
        </Style>
        
        <!-- Peer item style -->
        <Style Selector="Border.peer-item">
            <Setter Property="Background" Value="#0f3460"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Border.peer-item:pointerover">
            <Setter Property="Background" Value="#1a4980"/>
        </Style>
    </Window.Styles>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="LAN Transfer" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White"/>
            <TextBlock Text="Transfert de fichiers en rÃ©seau local - style AirDrop" 
                       FontSize="14" 
                       Foreground="#94a3b8"
                       Margin="0,4,0,0"/>
        </StackPanel>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- Left Panel: Peers List -->
            <Border Grid.Column="0" Classes="card">
                <Grid RowDefinitions="Auto,*">
                    <StackPanel Grid.Row="0" Margin="0,0,0,12">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Text="Appareils DÃ©tectÃ©s" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse Width="8" Height="8" 
                                         Fill="{Binding StatusColor}" 
                                         Margin="0,0,6,0"/>
                                <TextBlock Text="{Binding PeerCountText}" 
                                           FontSize="12"
                                           Foreground="#94a3b8"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                    
                    <!-- Peers ScrollViewer -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Peers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="models:Peer">
                                    <Border Classes="peer-item" 
                                            Tapped="OnPeerTapped">
                                        <Grid ColumnDefinitions="Auto,*,Auto">
                                            <!-- Avatar -->
                                            <Border Width="40" Height="40" 
                                                    CornerRadius="20" 
                                                    Background="#6366f1">
                                                <TextBlock Text="{Binding Name, Converter={StaticResource FirstCharConverter}}"
                                                           FontSize="16"
                                                           FontWeight="Bold"
                                                           Foreground="White"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                            
                                            <!-- Name & IP -->
                                            <StackPanel Grid.Column="1" Margin="12,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                           FontSize="14" 
                                                           FontWeight="SemiBold"
                                                           Foreground="White"/>
                                                <TextBlock Text="{Binding IpAddress}" 
                                                           FontSize="12"
                                                           Foreground="#64748b"/>
                                            </StackPanel>
                                            
                                            <!-- Send icon -->
                                            <TextBlock Grid.Column="2"
                                                       Text="ðŸ“¤"
                                                       FontSize="16"
                                                       VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                    
                    <!-- Empty state -->
                    <StackPanel Grid.Row="1" 
                                IsVisible="{Binding !HasPeers}"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ‘€" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Recherche d'appareils..."
                                   FontSize="14"
                                   Foreground="#64748b"
                                   HorizontalAlignment="Center"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            <!-- Right Panel: Drop Zone & Progress -->
            <Border Grid.Column="2" Classes="card">
                <Grid RowDefinitions="*,Auto">
                    <!-- Drop Zone -->
                    <Border Grid.Row="0"
                            BorderBrush="#334155"
                            BorderThickness="2"
                            CornerRadius="12"
                            Background="{Binding DropZoneBackground}"
                            DragDrop.AllowDrop="True"
                            Tapped="OnDropZoneTapped">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="ðŸ“" FontSize="64" HorizontalAlignment="Center"/>
                            <TextBlock Text="Glissez-dÃ©posez vos fichiers ici"
                                       FontSize="16"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       Margin="0,16,0,0"/>
                            <TextBlock Text="ou cliquez pour sÃ©lectionner"
                                       FontSize="14"
                                       Foreground="#64748b"
                                       HorizontalAlignment="Center"
                                       Margin="0,4,0,16"/>
                            <Button Classes="primary"
                                    Content="Choisir un fichier"
                                    Command="{Binding SelectFileCommand}"
                                    HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Transfer Progress -->
                    <Border Grid.Row="1" 
                            Margin="0,16,0,0"
                            IsVisible="{Binding IsTransferring}">
                        <StackPanel>
                            <Grid ColumnDefinitions="*,Auto">
                                <TextBlock Text="{Binding TransferFileName}"
                                           FontSize="14"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           TextTrimming="CharacterEllipsis"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding TransferSpeed}"
                                           FontSize="12"
                                           Foreground="#94a3b8"/>
                            </Grid>
                            
                            <ProgressBar Value="{Binding TransferProgress}"
                                         Minimum="0"
                                         Maximum="100"
                                         Height="8"
                                         Margin="0,8,0,0"
                                         CornerRadius="4"
                                         Foreground="#6366f1"
                                         Background="#334155"/>
                            
                            <Grid ColumnDefinitions="*,Auto" Margin="0,4,0,0">
                                <TextBlock Text="{Binding TransferProgressText}"
                                           FontSize="12"
                                           Foreground="#64748b"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding TransferPercent}"
                                           FontSize="12"
                                           Foreground="#94a3b8"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
        <!-- Footer: Status Bar -->
        <Border Grid.Row="2" 
                Background="#0f3460"
                CornerRadius="8"
                Padding="12,8"
                Margin="0,20,0,0">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="#22c55e"/>
                    <TextBlock Text="{Binding StatusMessage}"
                               FontSize="12"
                               Foreground="#94a3b8"
                               Margin="8,0,0,0"/>
                </StackPanel>
                
                <TextBlock Grid.Column="2"
                           Text="{Binding LocalAddress}"
                           FontSize="12"
                           Foreground="#64748b"/>
            </Grid>
        </Border>
    </Grid>
    
    <Window.Resources>
        <vm:FirstCharConverter x:Key="FirstCharConverter"/>
    </Window.Resources>
</Window>
