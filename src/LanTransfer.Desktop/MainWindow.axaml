<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LanTransfer.Desktop.ViewModels"
        xmlns:models="using:LanTransfer.Core.Models"
        x:Class="LanTransfer.Desktop.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="KITRANSFERT"
        Width="900"
        Height="650"
        MinWidth="700"
        Background="#1a1a2e"
        Icon="avares://LanTransfer.Desktop/Assets/icon.png"
        MinHeight="500"
        WindowStartupLocation="CenterScreen"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome">
    
    <Window.Styles>
        <!-- Modern Primary Button with gradient -->
        <Style Selector="Button.primary">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="#6366f1" Offset="0"/>
                        <GradientStop Color="#8b5cf6" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="18,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="#818cf8" Offset="0"/>
                        <GradientStop Color="#a78bfa" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Secondary Button -->
        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="#1e293b"/>
            <Setter Property="Foreground" Value="#e2e8f0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="18,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#334155"/>
        </Style>
        
        <!-- Green Button -->
        <Style Selector="Button.success">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="#10b981" Offset="0"/>
                        <GradientStop Color="#06b6d4" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="18,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.success:pointerover /template/ ContentPresenter">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="#34d399" Offset="0"/>
                        <GradientStop Color="#22d3ee" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Glass Card -->
        <Style Selector="Border.glass-card">
            <Setter Property="Background" Value="#1a1e2e"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#2a2f42"/>
        </Style>
        
        <!-- Peer item -->
        <Style Selector="Border.peer-item">
            <Setter Property="Background" Value="#0d1117"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="0,6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#21262d"/>
        </Style>
        <Style Selector="Border.peer-item:pointerover">
            <Setter Property="Background" Value="#161b22"/>
            <Setter Property="BorderBrush" Value="#30363d"/>
        </Style>
    </Window.Styles>
    
    <!-- Main Background with gradient -->
    <Panel>
        <Panel.Background>
            <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                <GradientStop Color="#0f0f1a" Offset="0"/>
                <GradientStop Color="#1a1a2e" Offset="0.5"/>
                <GradientStop Color="#0d1117" Offset="1"/>
            </LinearGradientBrush>
        </Panel.Background>
        
        <!-- Decorative gradient orbs -->
        <Ellipse Width="400" Height="400" 
                 Opacity="0.15"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Margin="-100,-100,0,0">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#6366f1" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        
        <Ellipse Width="300" Height="300" 
                 Opacity="0.1"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Bottom"
                 Margin="0,0,-50,-50">
            <Ellipse.Fill>
                <RadialGradientBrush>
                    <GradientStop Color="#8b5cf6" Offset="0"/>
                    <GradientStop Color="Transparent" Offset="1"/>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        
        <!-- Main Content -->
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,8,0,24">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <TextBlock Text="ðŸš€" FontSize="32"/>
                        <TextBlock Text="KITRANSFERT" 
                                   FontSize="28" 
                                   FontWeight="Bold"
                                   VerticalAlignment="Center">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                                    <GradientStop Color="#ffffff" Offset="0"/>
                                    <GradientStop Color="#a78bfa" Offset="1"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </StackPanel>
                    <TextBlock Text="Transfert de fichiers rapide et sÃ©curisÃ©" 
                               FontSize="14" 
                               Foreground="#64748b"
                               Margin="44,4,0,0"/>
                </StackPanel>
                
                <!-- User Profile Badge -->
                <Border Grid.Column="1" 
                        Background="#0d1117"
                        CornerRadius="20"
                        Padding="12,8"
                        BorderThickness="1"
                        BorderBrush="#21262d"
                        VerticalAlignment="Center"
                        Cursor="Hand"
                        Tapped="OnProfileTapped"
                        Margin="0,0,12,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ‘¤" FontSize="14"/>
                        <TextBlock Text="{Binding CurrentUsername}" 
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#f1f5f9"/>
                        <TextBlock Text="âœï¸" FontSize="10" Opacity="0.6"/>
                    </StackPanel>
                </Border>
                
                <!-- Status Badge -->
                <Border Grid.Column="2" 
                        Background="#0d1117"
                        CornerRadius="20"
                        Padding="12,8"
                        BorderThickness="1"
                        BorderBrush="#21262d"
                        VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <Ellipse Width="8" Height="8" Fill="{Binding StatusColor}"/>
                        <TextBlock Text="{Binding PeerCountText}" 
                                   FontSize="13"
                                   Foreground="#94a3b8"/>
                    </StackPanel>
                </Border>
                
                <!-- Window Controls -->
                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal" 
                            Spacing="6"
                            VerticalAlignment="Center"
                            Margin="12,0,0,0">
                    <Button Content="â”€" 
                            Width="32" Height="32"
                            Background="#1e293b"
                            Foreground="#94a3b8"
                            FontWeight="Bold"
                            CornerRadius="8"
                            Click="OnMinimizeClick"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"/>
                    <Button Content="âœ•" 
                            Width="32" Height="32"
                            Background="#ef4444"
                            Foreground="White"
                            FontWeight="Bold"
                            CornerRadius="8"
                            Click="OnCloseClick"
                            VerticalContentAlignment="Center"
                            HorizontalContentAlignment="Center"/>
                </StackPanel>
            </Grid>
            
            <!-- Main Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="24"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Left Panel: Peers & Controls -->
                <Border Grid.Column="0" Classes="glass-card">
                    <Grid RowDefinitions="Auto,*,Auto">
                        <!-- Header -->
                        <StackPanel Grid.Row="0" Margin="0,0,0,16">
                            <TextBlock Text="ðŸ“¡ Appareils" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="White"/>
                            <TextBlock Text="Cliquez sur un appareil pour l'envoyer" 
                                       FontSize="12"
                                       Foreground="#64748b"
                                       Margin="0,4,0,0"/>
                        </StackPanel>
                        
                        <!-- Peers List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Peers}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate x:DataType="models:Peer">
                                        <Border Classes="peer-item" Tapped="OnPeerTapped">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <!-- Avatar with gradient -->
                                                <Border Width="44" Height="44" CornerRadius="22">
                                                    <Border.Background>
                                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                                            <GradientStop Color="#6366f1" Offset="0"/>
                                                            <GradientStop Color="#8b5cf6" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Border.Background>
                                                    <TextBlock Text="{Binding Name, Converter={StaticResource FirstCharConverter}}"
                                                               FontSize="18"
                                                               FontWeight="Bold"
                                                               Foreground="White"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                </Border>
                                                
                                                <!-- Name & IP -->
                                                <StackPanel Grid.Column="1" Margin="14,0,0,0" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Name}" 
                                                               FontSize="14" 
                                                               FontWeight="SemiBold"
                                                               Foreground="#f1f5f9"/>
                                                    <TextBlock Text="{Binding IpAddress}" 
                                                               FontSize="12"
                                                               Foreground="#64748b"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>
                                                
                                                <!-- Arrow -->
                                                <TextBlock Grid.Column="2"
                                                           Text="â†’"
                                                           FontSize="18"
                                                           Foreground="#475569"
                                                           VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <!-- Empty state -->
                        <StackPanel Grid.Row="1" 
                                    IsVisible="{Binding !HasPeers}"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    Opacity="0.7">
                            <TextBlock Text="ðŸ”" FontSize="40" HorizontalAlignment="Center"/>
                            <TextBlock Text="Recherche..."
                                       FontSize="14"
                                       Foreground="#64748b"
                                       HorizontalAlignment="Center"
                                       Margin="0,12,0,0"/>
                        </StackPanel>
                        
                        <!-- Code Share Buttons -->
                        <StackPanel Grid.Row="2" Spacing="10" Margin="0,20,0,0">
                            <Button Classes="primary"
                                    Content="ðŸ”— Partager mon code"
                                    Command="{Binding ShareCodeCommand}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"/>
                            <Button Classes="success"
                                    Content="ðŸŽ¯ Entrer un code ami"
                                    Command="{Binding EnterCodeCommand}"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
                
                <!-- Right Panel: Drop Zone -->
                <Border Grid.Column="2" Classes="glass-card">
                    <Grid RowDefinitions="*,Auto">
                        <!-- Drop Zone -->
                        <Border Grid.Row="0"
                                CornerRadius="16"
                                Background="{Binding DropZoneBackground}"
                                DragDrop.AllowDrop="True"
                                Tapped="OnDropZoneTapped">
                            <Border.BorderBrush>
                                <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                    <GradientStop Color="#334155" Offset="0"/>
                                    <GradientStop Color="#1e293b" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.BorderBrush>
                            <Border.BorderThickness>
                                <Thickness>2</Thickness>
                            </Border.BorderThickness>
                            
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <!-- Icon -->
                                <Border Width="100" Height="100" 
                                        CornerRadius="50"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,24">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                                            <GradientStop Color="#1e293b" Offset="0"/>
                                            <GradientStop Color="#0f172a" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <TextBlock Text="ðŸ“" 
                                               FontSize="48" 
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                
                                <TextBlock Text="Glissez vos fichiers ici"
                                           FontSize="20"
                                           FontWeight="SemiBold"
                                           Foreground="#f1f5f9"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="ou cliquez pour sÃ©lectionner"
                                           FontSize="14"
                                           Foreground="#64748b"
                                           HorizontalAlignment="Center"
                                           Margin="0,6,0,24"/>
                                
                                <!-- Buttons -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                                    <Button Classes="secondary"
                                            Content="ðŸ“„ Fichier"
                                            Command="{Binding SelectFileCommand}"/>
                                    <Button Classes="secondary"
                                            Content="ðŸ“ Dossier"
                                            Command="{Binding SelectFolderCommand}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Transfer Progress -->
                        <Border Grid.Row="1" 
                                Margin="0,20,0,0"
                                IsVisible="{Binding IsTransferring}"
                                Background="#0d1117"
                                CornerRadius="12"
                                Padding="16"
                                BorderThickness="1"
                                BorderBrush="#21262d">
                            <StackPanel>
                                <Grid ColumnDefinitions="*,Auto">
                                    <TextBlock Text="{Binding TransferFileName}"
                                               FontSize="14"
                                               FontWeight="SemiBold"
                                               Foreground="#f1f5f9"
                                               TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding TransferSpeed}"
                                               FontSize="13"
                                               Foreground="#94a3b8"/>
                                </Grid>
                                
                                <ProgressBar Value="{Binding TransferProgress}"
                                             Minimum="0"
                                             Maximum="100"
                                             Height="6" 
                                             Margin="0,12,0,0"
                                             CornerRadius="3"
                                             Background="#1e293b"
                                             Foreground="#6366f1"/>
                                
                                <Grid ColumnDefinitions="*,Auto" Margin="0,8,0,0">
                                    <TextBlock Text="{Binding TransferProgressText}"
                                               FontSize="12"
                                               Foreground="#64748b"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding TransferPercent}"
                                               FontSize="12"
                                               Foreground="#6366f1"
                                               FontWeight="SemiBold"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Footer Status Bar -->
            <Border Grid.Row="2" 
                    Background="#0d1117"
                    CornerRadius="12"
                    Padding="16,12"
                    Margin="0,24,0,0"
                    BorderThickness="1"
                    BorderBrush="#21262d">
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Ellipse Width="8" Height="8" Fill="#22c55e"/>
                        <TextBlock Text="{Binding StatusMessage}"
                                   FontSize="13"
                                   Foreground="#94a3b8"/>
                    </StackPanel>
                    
                    <TextBlock Grid.Column="2"
                               Text="{Binding LocalAddress}"
                               FontSize="12"
                               Foreground="#475569"
                               FontFamily="Consolas, monospace"/>
                </Grid>
            </Border>
        </Grid>
    </Panel>
    
    <Window.Resources>
        <vm:FirstCharConverter x:Key="FirstCharConverter"/>
    </Window.Resources>
</Window>
