<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LanTransfer.Desktop.TransferRequestDialog"
        Title="Demande de transfert"
        Width="450"
        Height="280"
        CanResize="False"
        WindowStartupLocation="CenterScreen"
        Background="#1a1a2e"
        SystemDecorations="BorderOnly">
    
    <Window.Styles>
        <Style Selector="Button.accept">
            <Setter Property="Background" Value="#22c55e"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="Button.accept:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#16a34a"/>
        </Style>
        
        <Style Selector="Button.reject">
            <Setter Property="Background" Value="#ef4444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="24,12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style Selector="Button.reject:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#dc2626"/>
        </Style>
    </Window.Styles>
    
    <Border Background="#16213e" CornerRadius="12" Margin="12">
        <Grid RowDefinitions="Auto,*,Auto" Margin="20">
            <!-- Header -->
            <StackPanel Grid.Row="0" HorizontalAlignment="Center">
                <TextBlock Text="ðŸ“¥" FontSize="48" HorizontalAlignment="Center"/>
                <TextBlock Text="Demande de transfert"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
            
            <!-- Content -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,20">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border Width="44" Height="44" 
                            CornerRadius="22" 
                            Background="#6366f1"
                            VerticalAlignment="Center">
                        <TextBlock x:Name="SenderInitial"
                                   Text="?"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock x:Name="SenderNameText"
                                   Text="ExpÃ©diteur"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"/>
                        <TextBlock Text="veut vous envoyer :"
                                   FontSize="13"
                                   Foreground="#94a3b8"/>
                    </StackPanel>
                </StackPanel>
                
                <Border Background="#0f3460" 
                        CornerRadius="8" 
                        Padding="16,12"
                        Margin="0,16,0,0">
                    <Grid ColumnDefinitions="Auto,*,Auto">
                        <TextBlock Text="ðŸ“„" FontSize="24" VerticalAlignment="Center"/>
                        <StackPanel Grid.Column="1" Margin="12,0">
                            <TextBlock x:Name="FileNameText"
                                       Text="fichier.ext"
                                       FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                        <TextBlock Grid.Column="2"
                                   x:Name="FileSizeText"
                                   Text="0 KB"
                                   FontSize="13"
                                   Foreground="#64748b"
                                   VerticalAlignment="Center"/>
                    </Grid>
                </Border>
            </StackPanel>
            
            <!-- Buttons -->
            <Grid Grid.Row="2" ColumnDefinitions="*,16,*">
                <Button Grid.Column="0"
                        Classes="reject"
                        Content="âœ– Refuser"
                        Click="OnReject"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"/>
                <Button Grid.Column="2"
                        Classes="accept"
                        Content="âœ“ Accepter"
                        Click="OnAccept"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center"/>
            </Grid>
        </Grid>
    </Border>
</Window>
